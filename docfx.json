{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "styles/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "custom_template"
    ],
    "globalMetadata": {
      "_appName": "The Standard",
      "_appTitle": "The Standard - Software Engineering Standard",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_extraCss": [
        "styles/main.css"
      ],
      "_gitContribute": {
        "repo": "https://github.com/hassanhabib/The-Standard",
        "branch": "master"
      },
      "_gitUrlPattern": "github",
      "pdf": true
    }
  }
}